<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>User CRUD</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-100 min-h-screen p-10">

    <div class="max-w-5xl mx-auto bg-white p-8 rounded-lg shadow">

        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-semibold">Users</h1>
            <a href="/add" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-500">
                + Add User
            </a>
        </div>

        <% if (users.length> 0) { %>
            <div class="overflow-x-auto">
                <table class="w-full border border-gray-200 text-sm">
                    <thead class="bg-indigo-600 text-white">
                        <tr>
                            <th class="p-3 text-left">ID</th>
                            <th class="p-3 text-left">Name</th>
                            <th class="p-3 text-left">Email</th>
                            <th class="p-3 text-left">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user=> { %>
                            <tr class="border-b hover:bg-gray-50">
                                <td class="p-3">
                                    <%= user.id %>
                                </td>
                                <td class="p-3">
                                    <%= user.name %>
                                </td>
                                <td class="p-3">
                                    <%= user.email %>
                                </td>
                                <td class="p-3 space-x-2">
                                    <a href="/edit/<%= user.id %>"
                                        class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-400">
                                        Edit
                                    </a>
                                    <a href="/delete/<%= user.id %>" onclick="return confirm('Delete this user?')"
                                        class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-400">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <p class="text-center text-gray-500">No users found</p>
                <% } %>

    </div>

</body>

</html>